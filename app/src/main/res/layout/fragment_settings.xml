                    android:layout_marginLeft="10dp"
                    android:background="#858585" />
    -->
                <TextView
                    android:id="@+id/s_reverse"
                    android:layout_row="3"
                    android:layout_rowSpan="1"
                    android:layout_column="0"
                    android:layout_columnSpan="1"
                    android:text="Speed Reverse Vehicle"
                    android:textColor="#FFFFFF"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/w_reverse_value"
                    android:layout_row="3"
                    android:layout_rowSpan="1"
                    android:layout_column="1"
                    android:layout_columnSpan="1"
                    android:text=": (values)"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/s_cruise"
                    android:layout_row="4"
                    android:layout_rowSpan="1"
                    android:layout_column="0"
                    android:layout_columnSpan="1"
                    android:text="Speed Cruise Vehicle"
                    android:textColor="#FFFFFF"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/s_cruise_value"
                    android:layout_row="4"
                    android:layout_rowSpan="1"
                    android:layout_column="1"
                    android:layout_columnSpan="1"
                    android:text=": (values)"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/s_speed"
                    android:layout_row="2"
                    android:layout_rowSpan="1"
                    android:layout_column="0"
                    android:layout_columnSpan="1"
                    android:layout_marginRight="2dp"
                    android:text="Speed"
                    android:textColor="#FFFFFF"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/s_speed_value"
                    android:layout_row="2"
                    android:layout_rowSpan="1"
                    android:layout_column="1"
                    android:layout_columnSpan="1"
                    android:text=": (values)"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp" />

                <Button
                    android:id="@+id/setSpeed"
                    android:layout_width="80dp"
                    android:layout_height="20dp"
                    android:layout_row="2"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="5dp"
                    android:text="Set"
                    android:textColor="#ffffff"
                    android:textSize="12sp" />

                <Button
                    android:id="@+id/setReverse"
                    android:layout_width="80dp"
                    android:layout_height="20dp"
                    android:layout_row="3"
                    android:layout_column="2"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="5dp"
                    android:text="Set"
                    android:textColor="#ffffff"
                    android:textSize="12sp" />

                <Button
                    android:id="@+id/setCruise"
                    android:layout_width="80dp"
                    android:layout_height="20dp"
                    android:layout_row="4"
                    android:layout_column="2"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="5dp"
                    android:text="Set"
                    android:textColor="#ffffff"
                    android:textSize="12sp" />

                <Button
                    android:id="@+id/write"
                    android:layout_width="120dp"
                    android:layout_height="30dp"
                    android:layout_row="5"
                    android:layout_column="2"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="5dp"
                    android:text="Write"
                    android:textColor="#ffffff"
                    android:textSize="12sp" />
            </GridLayout>

        </GridLayout>
    </LinearLayout>
</ScrollView>
